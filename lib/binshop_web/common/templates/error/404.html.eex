<div class="full-flex-col">
  <div class="grow col align-center justify-center">
    <div class="title"><%= Map.get(assigns, :title, "Not Found") %></div>
    <div class="status"><%= Map.get(assigns, :status, "404") %></div>
    <div class="code"><%= Map.get(assigns, :code, "404") %></div>
    <div class="detail"><%= Map.get(assigns, :detail, "Server can't find the requested resource.") %></div>
    <%= if nil !== Map.get(assigns, :errors) do %>
      <div class="errors">
        <%= for {k,e} <- Map.get(assigns, :errors) do %>
          <div><strong><%= k %>: </strong><%= e %></div>
       <% end %>
      </div>
    <% end %>
    
  </div>
  <div class=""></div>
</div>
